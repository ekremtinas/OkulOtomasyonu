@model OkulOtomasyonu.Models.EntityFramework.Dersler

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ders Güncelle</h5>

            </div>

            @using (Html.BeginForm("Edit", "Dersler", FormMethod.Post, new { id = "myForm" }))
            {
                <div class="modal-body">

                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <style>
                            .span-danger {
                                font-size: 12px !important;
                                opacity: 0.9;
                                position: fixed;
                            }
                        </style>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger span-danger" })
                        @Html.HiddenFor(model=>model.id)
                        

                        <div class="form-group row pt-lg-2">
                            <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Ders No:</b></label><text class="star">*</text>
                            <div class="col-6">
                                <input onclick="spanAdi()" class="form-control  mr-sm-2 btn-sm in-margin text-box single-line" id="ders_no" min="0" name="ders_no"
                                        type="number" value="@Model.ders_no">
                                @Html.ValidationMessageFor(model => model.ders_no, "", new { @class = "text-danger span-danger ", id = "spanadi" })
                                <span class="field-validation-valid text-danger span-danger">@TempData["Error3"]</span>
                            </div>
                        </div>
                        <div class="form-group row pt-lg-2">
                            <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Ders Adı:</b></label><text class="star">*</text>
                            <div class="col-6">
                                <input onclick="spanSoyadi()" class="form-control  mr-sm-2 btn-sm in-margin text-box single-line" id="ders_adi" name="ders_adi" 
                                       type="text" value="@{if (Model.ders_adi != null) { var ders_adi = Model.ders_adi.Trim().Replace("  ", string.Empty);  @ders_adi}}">
                                @Html.ValidationMessageFor(model => model.ders_adi, "", new { @class = "text-danger span-danger", id = "spansoyadi" })
                                <span class="field-validation-valid text-danger span-danger">@TempData["Error4"]</span>

                            </div>
                        </div>
                        <div class="form-group row pt-lg-2">
                            <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Ders Hocası:</b></label><text class="star">*</text>
                            <div class="col-6">
                                <input onclick="spanSifreTekrar()" class="form-control  mr-sm-2 btn-sm in-margin text-box single-line" id="ders_hocasi" name="ders_hocasi" type="text" value="@{if (Model.ders_hocasi != null) { var ders_hocasi = Model.ders_hocasi.Trim().Replace("  ", string.Empty);  @ders_hocasi}}">
                                @Html.ValidationMessageFor(model => model.ders_hocasi, "", new { @class = "text-danger span-danger", id = "spansifretekrar" })
                            </div>
                        </div>



                    </div>

                </div>
                <div class="modal-footer">
                    <a href="/Dersler/Index" class="btn btn-outline-dark">Listeye Dön</a>
                    <input onclick="return bootboxUpdateLesson()" type="button" id="Update" value="Kaydet" class="btn btn-outline-success" />

                </div>
            }
        </div>
    </div>
</div>
    </div>
</div>

