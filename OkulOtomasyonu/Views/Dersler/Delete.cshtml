@model OkulOtomasyonu.Models.EntityFramework.Dersler

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ders Silinsin mi?</h5>

            </div>

            <div class="modal-body">
                <div class="form-group row">
                    <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Ders No:</b></label>
                    <div class="col-6">
                        @Html.DisplayFor(model => model.ders_no)

                    </div>
                </div>

                <div class="form-group row">
                    <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Ders Adı:</b></label>
                    <div class="col-6">
                        @Html.DisplayFor(model => model.ders_adi)

                    </div>
                </div>

                <div class="form-group row">
                    <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Ders Hocası:</b></label>
                    <div class="col-6">
                        @Html.DisplayFor(model => model.ders_hocasi)

                    </div>
                </div>




                </div>

                <div class="modal-footer">

                    @using (Html.BeginForm("Delete", "Dersler", FormMethod.Post, new { id = "myForm" }))
            {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                             <a href="/Dersler/Index"  class="btn btn-outline-dark">Listeye Dön</a>
                            <input onclick="return bootboxDeleteLesson()" type="button" id="Delete" value="Sil" class="btn btn-outline-warning" />

                         </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>



