@model OkulOtomasyonu.Models.EntityFramework.Ogrenciler

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Öğrenci Silinsin mi?</h5>

            </div>

            <div class="modal-body">
                <div class="form-group row">
                    <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Adı:</b></label>
                    <div class="col-6">
                        @Html.DisplayFor(model => model.adi)

                    </div>
                </div>

                <div class="form-group row">
                    <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Soyadı:</b></label>
                    <div class="col-6">
                        @Html.DisplayFor(model => model.soyadi)

                    </div>
                </div>

                <div class="form-group row">
                    <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>TC No:</b></label>
                    <div class="col-6">
                        @Html.DisplayFor(model => model.tc_no)

                    </div>
                </div>


                <div class="form-group row">
                    <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Okul No:</b></label>
                    <div class="col-6">
                        @Html.DisplayFor(model => model.o_no)

                    </div>
                </div>

                <div class="form-group row">
                    <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Doğum Tarihi:</b></label>
                    <div class="col-6">
                        @Model.d_tarihi.ToShortDateString()

                    </div>
                </div>

                <div class="form-group row">
                    <label for="input1" class="col-3 col-form-label text-sm-right mr-sm-2 btn-sm in-margin"><b>Adres:</b></label>
                    <div class="col-6">
                        @Html.DisplayFor(model => model.adres)

                    </div>



                </div>

                <div class="modal-footer">

                    @using (Html.BeginForm("Delete", "Ogrenciler", FormMethod.Post, new { id = "myForm" }))
            {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            
                            <a href="/Ogrenciler/Index"  class="btn btn-outline-dark">Listeye Dön</a>
                            <input onclick="return bootboxDelete()" type="button" id="Delete" value="Sil" class="btn btn-outline-warning" />
                        </div>
                    }
                   
                </div>
            </div>
        </div>
    </div>
</div>

   

